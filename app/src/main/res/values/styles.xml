<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
                Theme customizations available in newer API levels can go in
                res/values-vXX/styles.xml, while customizations related to
                backward-compatibility can go here.
            -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="roadText">
        <item name="android:textColor">@color/night_mode_txt_text</item>
        <item name="android:textSize">@dimen/mainview_road_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roadTitle">
        <item name="android:textColor">@color/night_mode_txt_text</item>
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roadDirect">
        <item name="android:textColor">@color/night_mode_txt_text</item>
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roadNext">
        <item name="android:textColor">@color/night_mode_txt_text</item>
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="roadSeq">
        <item name="android:textColor">#004254</item>
        <item name="android:textSize">72sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="sampleText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="sampleTextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">55sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#77787A</item>
        <item name="android:shadowColor">#BBBDBE</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

