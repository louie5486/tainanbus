<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/radioGroupEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/radio0x0001"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:checked="true"
                    android:text="0x0001:進出站回報" />

                <RadioButton
                    android:id="@+id/radio0x0002"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="0x0002:超速超轉回報" />

                <RadioButton
                    android:id="@+id/radio0x0004"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="0x0004:急加/減速回報" />

                <RadioButton
                    android:id="@+id/radio0x0008"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="0x0008:行駛中前門/後門開啟回報" />

                <RadioButton
                    android:id="@+id/radio0x0010"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="0x0010:車輛異常回報" />

                <RadioButton
                    android:id="@+id/radio0x0020"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="0x0020:車輛狀態回報" />

                <RadioButton
                    android:id="@+id/radio0x0040"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="0x0040:異常發車回報" />

                <RadioButton
                    android:id="@+id/radio0x0080"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="0x0080:司機回覆回報" />

                <RadioButton
                    android:id="@+id/radio0x0100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="0x0100:進出特定區域回報" />

                <RadioButton
                    android:id="@+id/radio0x8000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:text="0x8000:路線外營運回報" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

</LinearLayout>