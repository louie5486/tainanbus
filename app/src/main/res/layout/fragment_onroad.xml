<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/onRoadLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp">

    <Button
        android:id="@+id/onRoadGoBackButton"
        style="@style/btn_stop_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="3dp"
        android:background="@drawable/btn_red_night"
        android:maxLines="2"
        android:paddingBottom="8dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="8dp"
        android:text="@string/unDuty" />

    <TextView
        android:id="@+id/roadTitleTextView"
        style="@style/roadTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/onRoadGoBackButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/onRoadGoBackButton"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="路線:0000 一二三-四五六" />

    <TextView
        android:id="@+id/roadDirectTextView"
        style="@style/roadDirect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/roadTitleTextView"
        android:maxLines="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/roadCurrentTextView"
        style="@style/roadText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/roadNextTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/roadNext"
        style="@style/roadText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dutyStatusTextView"
        android:layout_toLeftOf="@+id/onRoadGoBackButton"
        android:layout_toRightOf="@+id/roadNextTextView"
        android:layout_toStartOf="@+id/onRoadGoBackButton"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:singleLine="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/roadNextTextView"
        style="@style/roadText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dutyStatusTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLines="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/dutyStatusTextView"
        style="@style/txt_duty_status_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@+id/onRoadGoBackButton"
        android:layout_toStartOf="@+id/onRoadGoBackButton"
        android:background="@drawable/btn_white_night"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="8dp"
        android:text="TextView\r\nf" />

</RelativeLayout>